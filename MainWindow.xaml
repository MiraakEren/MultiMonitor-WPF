<Window
    x:Class="MultiMonitor.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:MultiMonitor"
    Title="MultiMonitor" Height="600" Width="800" Background="#F5F5F5"
    Icon="icon.ico">

    <Grid x:Name="MainGrid" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Row 1: Import, Dropdown, Run, Reset buttons -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="ImportButton" Grid.Column="0" Content="Import" Click="ImportButton_Click" Margin="0,0,10,0" Background="#E0E0E0" Foreground="#333" Padding="5,2"/>
            <ComboBox x:Name="ScriptsComboBox" Grid.Column="1"
                      SelectionChanged="ScriptsComboBox_SelectionChanged" HorizontalAlignment="Stretch" Margin="0,0,10,0" Background="#FFFFFF" Foreground="#333"/>
            <Button x:Name="RunButton" Grid.Column="2" Content="Run" Click="RunButton_Click" Margin="0,0,10,0" Background="#4CAF50" Foreground="#FFFFFF" Padding="5,2"/>
            <Button x:Name="ResetButton" Grid.Column="3" Content="Reset" Click="ResetButton_Click" Background="#E57373" Foreground="#FFFFFF" Padding="5,2"/>
        </Grid>

        <!-- Row 2: Tags Panel -->
        <Border Grid.Row="1" Margin="0,0,0,10" BorderBrush="#BDBDBD" BorderThickness="1" Padding="10" Background="#FFFFFF">
            <StackPanel>
                <ItemsControl x:Name="TagsRepeater">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#BDBDBD" BorderThickness="1" Padding="5" Margin="2" Background="#E0E0E0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}" Foreground="#333" FontWeight="Bold"
                                               MouseEnter="TagTextBlock_MouseEnter" MouseLeftButtonDown="TagTextBlock_Click"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <!-- Row 3: Add Template Sentence Button -->
        <Button Grid.Row="2" Content="Add Template Sentence" HorizontalAlignment="Center" Margin="0,0,0,10" Click="AddTemplateSentenceButton_Click" Background="#2196F3" Foreground="#FFFFFF" Padding="5,2"/>

        <!-- Row 4: Template Sentences -->
        <ScrollViewer Grid.Row="3" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10">
            <ItemsControl x:Name="TemplatesRepeater">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#BDBDBD" BorderThickness="1" Padding="10" Background="#FFFFFF" Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Refresh Button -->
                                <Button Grid.Column="0" Content="⟳" Margin="0,0,10,0"
                                        Click="ResetTemplateButton_Click" Tag="{Binding}" Background="#E0E0E0" Foreground="#333" Padding="5,2"/>

                                <!-- Editable TextBox -->
                                <TextBox Grid.Column="1" Text="{Binding FormattedText, Mode=TwoWay}" TextWrapping="Wrap" Margin="0,0,10,0" Background="#FFFFFF" Foreground="#333"/>

                                <!-- Copy Button -->
                                <Button Grid.Column="2" Content="📋" Margin="0,0,10,0"
                                        Click="CopyTemplateButton_Click" Tag="{Binding}" Background="#E0E0E0" Foreground="#333" Padding="5,2"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Row 5: Status Bar -->
        <TextBlock Grid.Row="4" x:Name="StatusTextBlock" Text="Ready" HorizontalAlignment="Left" Foreground="#757575" Margin="0,10,0,0"/>
    </Grid>
</Window>